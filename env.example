# Environment variables for e-report-web

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8081
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_RETRIES=3

# CORS Configuration
NEXT_PUBLIC_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
NEXT_PUBLIC_CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
NEXT_PUBLIC_CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin
NEXT_PUBLIC_CORS_CREDENTIALS=true

# Authentication Configuration
NEXT_PUBLIC_AUTH_TOKEN_KEY=e-report-token
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_KEY=e-report-refresh-token
NEXT_PUBLIC_AUTH_TOKEN_EXPIRY=86400000
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_EXPIRY=604800000

# Feature Flags
NEXT_PUBLIC_ENABLE_WHATSAPP=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# UI Configuration
NEXT_PUBLIC_THEME_PRIMARY=#3b82f6
NEXT_PUBLIC_THEME_SECONDARY=#6b7280
NEXT_PUBLIC_THEME_SUCCESS=#10b981
NEXT_PUBLIC_THEME_WARNING=#f59e0b
NEXT_PUBLIC_THEME_ERROR=#ef4444
NEXT_PUBLIC_THEME_INFO=#06b6d4

# Mobile Configuration
NEXT_PUBLIC_MOBILE_ENABLE_TOUCH_GESTURES=true
NEXT_PUBLIC_MOBILE_ENABLE_HAPTIC_FEEDBACK=true
NEXT_PUBLIC_MOBILE_ENABLE_SWIPE_NAVIGATION=true
NEXT_PUBLIC_MOBILE_ENABLE_PULL_TO_REFRESH=false
NEXT_PUBLIC_MOBILE_ENABLE_SMOOTH_SCROLLING=true

# Performance Configuration
NEXT_PUBLIC_PERFORMANCE_ENABLE_LAZY_LOADING=true
NEXT_PUBLIC_PERFORMANCE_ENABLE_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_PERFORMANCE_ENABLE_CODE_SPLITTING=true
NEXT_PUBLIC_PERFORMANCE_ENABLE_SERVICE_WORKER=false
NEXT_PUBLIC_PERFORMANCE_ENABLE_CACHING=true

# Error Handling Configuration
NEXT_PUBLIC_ERROR_ENABLE_ERROR_BOUNDARY=true
NEXT_PUBLIC_ERROR_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ERROR_ENABLE_ERROR_LOGGING=true
NEXT_PUBLIC_ERROR_MAX_RETRIES=3
NEXT_PUBLIC_ERROR_RETRY_DELAY=1000

# Security Configuration
NEXT_PUBLIC_SECURITY_ENABLE_CSP=false
NEXT_PUBLIC_SECURITY_ENABLE_HSTS=false
NEXT_PUBLIC_SECURITY_ENABLE_XSS_PROTECTION=true
NEXT_PUBLIC_SECURITY_ENABLE_CLICKJACKING_PROTECTION=true
NEXT_PUBLIC_SECURITY_ENABLE_MIME_SNIFFING_PROTECTION=true

# Logging Configuration
NEXT_PUBLIC_LOGGING_LEVEL=debug
NEXT_PUBLIC_LOGGING_ENABLE_CONSOLE=true
NEXT_PUBLIC_LOGGING_ENABLE_FILE=false
NEXT_PUBLIC_LOGGING_ENABLE_REMOTE=false
