{
  "name": "e-report",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "export": "next export",
    "clean": "rm -rf .next out dist",
    "backend:dev": "cd ../e-report-be && go run main.go",
    "backend:build": "cd ../e-report-be && go build -o main .",
    "backend:test": "cd ../e-report-be && go test ./...",
    "setup": "npm install && cd ../e-report-be && go mod tidy",
    "dev:full": "concurrently \"npm run dev\" \"npm run backend:dev\"",
    "build:full": "npm run build && npm run backend:build",
    "start:full": "concurrently \"npm start\" \"npm run backend:dev\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd ../e-report-be && go run main.go migrate",
    "db:seed": "cd ../e-report-be && go run main.go seed",
    "db:reset": "cd ../e-report-be && go run main.go reset",
    "preview": "npm run build && npm start",
    "deploy": "npm run build && npm run export",
    "postinstall": "npm run type-check"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.4",
    "@heroicons/react": "^2.0.18",
    "lucide-react": "^0.263.1",
    "recharts": "^2.8.0",
    "jspdf": "^2.5.1",
    "xlsx": "^0.18.5",
    "axios": "^1.6.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "@eslint/eslintrc": "^3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "jest-environment-jsdom": "^29.7.0",
    "@next/bundle-analyzer": "^15.5.4"
  }
}